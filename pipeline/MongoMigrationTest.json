{
	"name": "MongoMigrationTest",
	"properties": {
		"activities": [
			{
				"name": "Export to CSV",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "CosmosDbMongoDbApiSource",
						"batchSize": 100
					},
					"sink": {
						"type": "BlobSink"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "fruit"
								},
								"sink": {
									"name": "fruit"
								}
							},
							{
								"source": {
									"path": "size"
								},
								"sink": {
									"name": "size"
								}
							},
							{
								"source": {
									"path": "color"
								},
								"sink": {
									"name": "color"
								}
							},
							{
								"source": {
									"path": "datetime"
								},
								"sink": {
									"name": "datetime"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "SourceMongoDBCollection",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ExportedFileFromMongoDB",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}